{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": "error",
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "no-extra-boolean-cast": 0,
    "no-unused-vars": [2, { "args": "after-used", "argsIgnorePattern": "^_" }]
  }
}
